<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass name="Tanna\ProductBundle\Model\Product">


        <field name="nameFr" fieldName="nameFr" type="string"/>
        <field name="nameEn" fieldName="nameEn" type="string"/>
        <field name="slug" column="slug" type="string" length="255" unique="true" />
        <field name="price" column="price" type="float" />


    </mapped-superclass>

</doctrine-mapping>